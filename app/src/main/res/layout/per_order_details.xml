<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/productImage"
                android:layout_width="200dp"
                android:layout_height="207dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic[6]" />

            <TextView
                android:id="@+id/imageURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="URL"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tagLine"
                style="@style/TextHeading"
                android:text="Tag Line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    style="@style/SubItems"
                    android:layout_weight="0.6"
                    android:text="Ring Code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/ringCode"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    tools:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    style="@style/SubItems"
                    android:layout_weight="0.6"
                    android:text="Ring Size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/ringSize"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    style="@style/SubItems"
                    android:layout_weight="0.6"
                    android:text="Sales Id" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/salesId"
                    android:layout_weight="0.4"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/metalType"

                style="@style/TextHeading"
                android:text="Metal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    style="@style/SubItems"
                    android:layout_weight="0.6"
                    android:text="Purity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/metalPurity"
                    android:layout_weight="0.4"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    style="@style/SubItems"
                    android:layout_weight="0.6"
                    android:text="Color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/metalColor"
                    android:layout_weight="0.4"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/diamond"

                style="@style/TextHeading"
                android:text="Diamond" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/SubItems"
                    android:layout_weight="0.6"
                    android:text="Color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:id="@+id/diamondColor"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    style="@style/SubItems"
                    android:layout_weight="0.6"
                    android:text="Clarity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/diamondClarity"
                    android:layout_weight="0.4"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="1" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView

                style="@style/SubItems"
                android:layout_weight="0.6"
                android:text="Cut" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/diamondCut"
                android:layout_weight="0.4"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView

                style="@style/SubItems"
                android:layout_weight="0.6"
                android:text="Weight" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textSize="20sp"
                android:id="@+id/diamondWeight"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="1" />
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/phases"
                style="@style/TextHeading"
                android:text="Phases" />

            <include
                android:id="@+id/pdialog"
                layout="@layout/phases_dialog"
                android:layout_width="wrap_content"
                android:layout_height="366dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorAccent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/textView6"
                style="@style/SubItems"
                android:text="Client"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <android.support.design.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:id="@+id/edit"
                    android:textColor="#fff"
                    app:backgroundTint="@color/colorPrimary"

                    app:icon="@drawable/ic_pencil_edit_button"
                    app:iconGravity="start"
                    app:iconTint="#fff" />

                <android.support.design.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:textColor="#fff"
                    android:id="@+id/delete"

                    app:backgroundTint="@color/colorPrimary"
                    app:icon="@drawable/ic_rubbish_bin"
                    app:iconTint="#fff" />

                <android.support.design.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Reshoot"
                    android:textColor="#fff"
                    android:id="@+id/reshoot"
                    app:backgroundTint="@color/colorPrimary"
                    app:icon="@drawable/reset"
                    app:iconTint="#fff" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</layout>

